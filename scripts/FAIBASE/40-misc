#! /usr/sbin/cfagent -f

control:
   actionsequence = ( files directories editfiles )
   EditFileSize = ( 30000 )
   myhostname = ( "$(HOSTNAME)" )

files:
   any::

directories:
   any::
	/tmp mode=1777 owner=0 group=0

editfiles:
   any::
	{ /etc/mailname
	  AutoCreate
          AppendIfNoSuchLine "$(myhostname)"
	}

	{ /etc/default/rcS
	  ReplaceAll "^UTC=.*" With "UTC=${UTC}"
	}

