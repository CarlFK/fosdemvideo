#! /usr/sbin/cfagent -f

control:
   any::
   actionsequence = ( files directories editfiles )
   EditFileSize = ( 30000 )

files:
   any::

editfiles:
   any::
	{ /etc/hosts
	  DeleteLinesStarting '127.0'
	  AppendIfNoSuchLine '127.0.0.1       localhost'
	  AppendIfNoSuchLine "${IPADDRESS}  ${HOSTNAME}.dc8.debconf.org ${HOSTNAME}"
	}

