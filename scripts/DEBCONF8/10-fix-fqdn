#! /usr/sbin/cfagent -f

control:
   any::
   actionsequence = ( files directories editfiles )
   EditFileSize = ( 30000 )
   myhostname = ( "$(HOSTNAME)" )
   myipaddress = ( "$(IPADDRESS)" )

files:
   any::

editfiles:
   any::
	{ /etc/hosts
	  DeleteLinesStarting '127.0'
	  AppendIfNoSuchLine '127.0.0.1       localhost'
	  AppendIfNoSuchLine "$(myipaddress)    $(myhostname) $(myhostname).dc8.debconf.org"
	}

